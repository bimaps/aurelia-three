{
  "name": "aurelia-three",
  "description": "An Aurelia plugin project.",
  "version": "1.0.1",
  "scripts": {
    "build": "au build-plugin",
    "start": "au run",
    "watch": "au build-plugin --watch",
    "xprepare": "npm run build",
    "pretest": "au lint",
    "preversion": "au test",
    "test": "au test",
    "dico": "ts-node --project dico-tool/tsconfig.json dico-tool/parse.ts",
    "dico:send": "ts-node --project dico-tool/tsconfig.json dico-tool/send.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bimaps/aurelia-three"
  },
  "author": "platform5",
  "license": "AGPL-3.0-or-later",
  "keywords": [
    "aurelia",
    "plugin",
    "IFC",
    "BIM",
    "ThreeJS"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.35",
    "@types/three": "^0.92.22",
    "aurelia-animator-css": "^1.0.4",
    "aurelia-bootstrapper": "^2.3.3",
    "aurelia-cli": "^2.0.2",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",
    "aurelia-testing": "^1.0.0",
    "aurelia-tools": "^2.0.0",
    "browser-sync": "^2.26.14",
    "connect-history-api-fallback": "^1.6.0",
    "debounce": "^1.2.1",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-tslint": "^8.1.4",
    "gulp-typescript": "^5.0.1",
    "gulp-watch": "^5.0.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "minimatch": "^3.0.4",
    "promise-polyfill": "^8.2.0",
    "requirejs": "^2.3.6",
    "text": "requirejs/text#latest",
    "through2": "^4.0.2",
    "ts-jest": "^26.5.3",
    "tslint": "^5.20.1",
    "typescript": "^4.2.3",
    "vinyl-fs": "^3.0.3"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "main": "dist/commonjs/index.js",
  "module": "dist/native-modules/index.js",
  "jest": {
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.(ts|js)$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.ts"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "dependencies": {
    "@mapbox/geojson-area": "^0.2.2",
    "@pnext/three-loader": "0.1.8",
    "@tweenjs/tween.js": "^18.6.4",
    "@types/geojson": "^7946.0.7",
    "aurelia-deco": "^2.0.7",
    "canvg": "^3.0.7",
    "file-saver": "^2.0.5",
    "node-html-parser": "^3.1.0",
    "object-resolve-path": "^1.1.1",
    "proj4": "^2.7.2",
    "three": "^0.112.1",
    "three-obj-mtl-loader": "^1.0.3",
    "three-orbitcontrols": "^2.110.3",
    "three-text2d": "^0.6.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.34"
  }
}
